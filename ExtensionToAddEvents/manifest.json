{
    "manifest_version": 2,
    "name": "UB Unifier Extension",
    "description": "Extension to select event details and date on browser and adds it to the google calendar",
    "version": "0.2",
    // "background": {
    //     "scripts": ["event.js"],
    //     // "pages" : ["extensionPopup.html"],
    //     "persistent": false
    // },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    // "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
     "js": ["jquery.min.js", "jquery.datetimepicker.min.js","event.js","date.js"],
     "matches": ["http://*/*", "https://*/*"],
     "all_frames": true
   }],

    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*",
        "http://www.google.com/"
    ]
}
